# ===========================================
# Vuelos Baratos - Variables de Entorno
# ===========================================

# Servidor
PORT=3000
NODE_ENV=development

# Base de datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_password_mysql
DB_NAME=vuelos_baratos
DB_PORT=3306

# APIs de vuelos
AMADEUS_CLIENT_ID=tu_client_id
AMADEUS_CLIENT_SECRET=tu_client_secret
KIWI_API_KEY=tu_kiwi_key

# JWT
JWT_SECRET=tu_jwt_secret_cambiar_en_produccion
JWT_EXPIRES_IN=7d

# Email (Nodemailer)
SMTP_HOST=smtp.tu-servidor.com
SMTP_PORT=465
SMTP_USER=alertas@tudominio.com
SMTP_PASS=tu_email_password
EMAIL_FROM=Vuelos Baratos <alertas@tudominio.com>

# Cache
CACHE_TTL_MINUTES=30

# Limites mensuales de API (por defecto: Amadeus 2000, Kiwi 3000)
AMADEUS_MONTHLY_LIMIT=2000
KIWI_MONTHLY_LIMIT=3000
